package Assigment;

 class Student{
	       //Attribute of the student
	String name;
	int age;
	char grade;
	     //Constractor to initialze student attributes
	Student(String name,int age, char grade){
		this.name = name;
		this.age = age;
		this.grade = grade;
		
	}
	     //Method to display student details
	
	void displayDetails() {
		System.out.println("Name:" + name+",Age:"+ age +",Grade:"+ grade);
			
		}
	}
 
     //Main class to demonstrate creating and displaying student details
 
  public class StudentDetails1{
	  public static void main(String[] args) {
		  //Creating multipul student objects 
		 Student student1 = new Student("Mallesh",22,'A');
		 Student student2 = new Student("Ramesh",21,'B');
		 Student student3 = new Student("Hari",20,'C');
		 
		 //Calling displayDetails method for each student
		 student1.displayDetails();
		 student2.displayDetails();
		 student3.displayDetails();	
		 }
	  
  }
	
	


